rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read for all images in the products directory
    match /products/{allPaths=**} {
      allow read;
    }

    // A user can only write to a path that matches their user ID.
    // This is a secure way to allow admins to upload product images.
    match /products/{userId}/{productId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
